@model Z01.Models.Planner.EditSlot

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>
@if (Model.EditedActivity != null)
{
    <div about="col-md-7">
        Edytowany wpis ma id @Model.EditedActivity.Id, odbywa się w slocie @Model.Slot, w sali  @Model.EditedActivity.Room,
        dla klasy @Model.EditedActivity.Group, dla przedmiotu @Model.EditedActivity.Subject, przez nauczyciela @Model.EditedActivity.Teacher
    </div>
}
else
{
    <div about="col-md-7">
        Dodajesz wpis dla slotu @Model.Slot
    </div>
}


<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="EditSlot">
            <input type="hidden" asp-for="EditedActivity.Id"/>
            @Html.HiddenFor(model => model.EditedActivity.Id)

            <div class="form-group" id="form-group-rooms">
                <label class="control-label">Sala</label>
                <select id="sel-room" class="form-control" asp-for="EditedActivity.Room" asp-items="@(Model.Rooms)">
                </select>
            </div>

            <div class="form-group" id="form-group-groups">
                <label class="control-label">Klasa</label>
                <select id="sel-groups" class="form-control" asp-for="EditedActivity.Group" asp-items="@(Model.Groups)">
                </select>
            </div>

            <div class="form-group" id="form-group-subjects">
                <label class="control-label">Przedmiot</label>
                <select id="sel-subject" class="form-control" asp-for="EditedActivity.Subject" asp-items="@(Model.Subjects)">
                </select>
            </div>

            <div class="form-group" id="form-group-teachers">
                <label class="control-label">Nauczyciel</label>
                <select id="sel-teacher" class="form-control" asp-for="EditedActivity.Teacher" asp-items="@(Model.Teachers)">
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary"/>
                @if (Model.EditedActivity != null)
                {
                    <button type="button" class="btn btn-danger">
                        Usuń wpis
                    </button>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
